#!/bin/bash
# staysafedb

# Stop on errors
# See https://vaneyckt.io/posts/safer_bash_scripts_with_set_euxo_pipefail/
set -Eeuo pipefail

# Sanity check command line options
usage() {
  echo "Usage: $0 (create|destroy|reset)"
}

if [ $# -ne 1 ]; then
  usage
  exit 1
fi

# Parse argument.  $1 is the first argument
case $1 in
  "create")
    if [ -d var/uploads/ ] || [ -f var/staysafe.sqlite3 ]; then
        echo "Error: database already exists"
        exit 1
    else
        mkdir -p var/uploads
        echo "+ mkdir -p var/uploads"
        sqlite3 var/staysafe.sqlite3 < sql/sample_schema.sql
        echo "+ sqlite3 var/staysafe.sqlite3 < sql/sample_schema.sql"
        sqlite3 var/staysafe.sqlite3 < sql/sample_data.sql
        echo "+ sqlite3 var/staysafe.sqlite3 < sql/sample_data.sql"
        cp sql/uploads/* var/uploads/
        echo "cp sql/uploads/* var/uploads/"
    fi
    ;;

  "destroy")
    rm -rf var/staysafe.sqlite3 var/uploads
    echo "+ rm -rf var/staysafe.sqlite3 var/uploads"
    ;;

  "reset")
    rm -rf var/staysafe.sqlite3 var/uploads
    echo "+ rm -rf var/staysafe.sqlite3 var/uploads"
    mkdir -p var/uploads
    echo "+ mkdir -p var/uploads"
    sqlite3 var/staysafe.sqlite3 < sql/sample_schema.sql
    echo "+ sqlite3 var/staysafe.sqlite3 < sql/sample_schema.sql"
    sqlite3 var/staysafe.sqlite3 < sql/sample_data.sql
    echo "+ sqlite3 var/staysafe.sqlite3 < sql/sample_data.sql"
    ;;
  *)
    usage
    exit 1
    ;;
esac
